# MQT Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# GOOGLE GEMINI API CONFIGURATION
# ============================================
# Required: Get your API key from https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Override default models
# GEMINI_MODEL=gemini-2.5-flash
# IMAGEN_MODEL=imagen-3.0-generate-001

# Model Tier Selection (FREE | MID | PREMIUM | ULTRA)
# FREE: 100 images/day, $0/image, Good quality (Gemini 2.5 Flash Image)
# MID: Unlimited, ~$0.0002/image, Very Good quality (Gemini 2.5 Flash Image)
# PREMIUM: Unlimited, $0.032/image, Excellent quality (Imagen 3)
# ULTRA: Unlimited, ~$0.05/image, State-of-the-Art (Gemini 3 Pro Image)
MODEL_TIER=FREE


# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Profile (USER | DEV)
# USER: Standard generation features
# DEV: Includes preset learning/management
APP_PROFILE=USER

# Server port
PORT=8080

# ============================================
# GOOGLE CLOUD CONFIGURATION (Optional)
# ============================================
# Only needed for Cloud Run deployment
# GCP_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:8080

# ============================================
# UPLOAD LIMITS
# ============================================
# Max upload size in bytes (default: 10MB)
MAX_IMAGE_SIZE=10485760

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# API endpoint for frontend
VITE_API_URL=http://localhost:8080/api/generate
VITE_USE_MOCK=false
VITE_APP_PROFILE=USER

# ============================================
# FEATURE TOGGLES (All OFF by default for initial testing)
# ============================================
# Enable iterative refinement endpoint
ENABLE_REFINEMENT=false

# Enable preset learning (DEV mode only)
ENABLE_PRESET_LEARNING=false

# Enable PDF upload support
ENABLE_PDF_UPLOAD=false

# Enable multi-format downloads (JPG, WEBP, SVG)
ENABLE_MULTI_FORMAT_DOWNLOAD=false
